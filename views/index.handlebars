<header>
 <div class="container">
  <div class="row">
   <div class="col text-center">
    <h1>Eat-Da-Burger!</h1>
   </div>
  </div>
 </div>
</header>
<section>
 <div class="container">
  <div class="row">
   <div class="col-md-6 text-center">
    <div class="innerDiv">
     <h3>Now Serving:</h3>
     {{!-- Burgers where devoured = false --}}
     {{#each burgers}}
     {{#unless devoured}}
     <div class="topBotMarg">
      <div class="d-flex justify-content-between">
       <span>
        <i class="fas fa-hamburger fa-2x"></i>
        <p class="leftMarg inlineP">
         {{burger_name}}
        </p>
       </span>
       <button type="button" class="btn btn-dark btn-sm leftMarg devour" data-id="{{id}}">Devour!</button>
      </div>
     </div>
     <hr>
     {{/unless}}
     {{/each}}
    </div>
   </div>
   <div class="col-md-6 text-center">
    <div class="innerDiv">
     <h3>Already Served:</h3>
     {{!-- Burgers where devoured = true --}}
     {{#each burgers}}
     {{#if devoured}}
     <div class="topBotMarg">
      <div class="d-flex justify-content-start">
       <span>
        <i class="fas fa-hamburger fa-2x"></i>
        <p class="leftMarg inlineP">
         {{burger_name}}
        </p>
       </span>
      </div>
     </div>
     <hr>
     {{/if}}
     {{/each}}
    </div>
   </div>
  </div>
 </div>
</section>
<section>
 <div class="container">
  <div class="row">
   <div class="col text-center">
    <h3>New Order:</h3>
    <form id="newBurger">
     <div class="d-flex justify-content-center">
      <input type="text" class="form-control" id="newBurgerName" placeholder="Enter burger order here...">
      <button type="submit" class="btn btn-warning leftMarg">Submit</button>
     </div>
    </form>
    <br><br>
   </div>
  </div>
 </div>
</section>